<!DOCTYPE html>
<html>
<head>
    <title><%= resume.name %> - Resume</title>
    <style>
        body { 
            font-family: Arial; padding: 20px; background: #f4f4f4;
        }
        .container {
            max-width: 800px; margin: auto; background: white;
            padding: 20px; border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        h1, h2 { border-bottom: 2px solid #ddd; padding-bottom: 5px; }
        .section { margin-top: 20px; }
    </style>
</head>
<body>
<%- include('partials/header.ejs') %>
<div class="container">
    <h1><%= resume.name %></h1>
    <p>Email: <%= resume.email %></p>
    <p>Phone: <%= resume.phone %></p>

    <div class="section">
        <h2>Summary</h2>
        <p><%= resume.summary %></p>
    </div>

    <div class="section">
        <h2>Education</h2>
        <p><%= resume.education %></p>
    </div>

    <div class="section">
        <h2>Experience</h2>
        <p><%= resume.experience %></p>
    </div>

    <div class="section">
        <h2>Skills</h2>
        <ul>
            <% resume.skills.forEach(skill => { %>
                <li><%= skill %></li>
            <% }) %>
        </ul>
    </div>
</div>

</body>
</html>
