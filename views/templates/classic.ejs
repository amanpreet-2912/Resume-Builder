<!DOCTYPE html>
<html>
<head>
  <title><%= resume.name %> - Resume</title>
  <style>
    /* Reset some default styles */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #e8f0f7;
      padding: 20px;
    }

    .container {
      max-width: 900px;
      background: #fff;
      margin: auto;
      padding: 40px;
      border-radius: 10px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    .header {
      display: flex;
      align-items: center;
      margin-bottom: 30px;
    }

    .profile-pic {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      object-fit: cover;
      margin-right: 25px;
      border: 3px solid #4a90e2;
    }

    .header-info h1 {
      font-size: 32px;
      color: #333;
    }

    .header-info p {
      font-size: 16px;
      color: #555;
      margin-top: 5px;
    }

    h2 {
      border-bottom: 2px solid #4a90e2;
      padding-bottom: 5px;
      margin-top: 30px;
      color: #4a90e2;
    }

    p, li {
      line-height: 1.6;
      color: #444;
    }

    ul {
      margin-left: 20px;
    }

    .section {
      margin-bottom: 25px;
    }

    .skills li {
      background: #f0f4f8;
      display: inline-block;
      padding: 5px 12px;
      margin: 5px 5px 5px 0;
      border-radius: 5px;
      font-size: 14px;
    }

    @media (max-width: 600px) {
      .header {
        flex-direction: column;
        align-items: center;
        text-align: center;
      }

      .profile-pic {
        margin-bottom: 15px;
      }
    }
  </style>
</head>
<body>

<%- include('../partials/header.ejs') %>

<div class="container">
  <div class="header">

      <img src="<%= resume.photo %>" alt="Profile Picture" class="profile-pic">
  
    <div class="header-info">
      <h1><%= resume.name %></h1>
      <p><b>Email:</b> <%= resume.email %> | <b>Phone:</b> <%= resume.phone %></p>
      <% if (resume.linkedin) { %>
        <p><b>LinkedIn:</b> <a href="<%= resume.linkedin %>" target="_blank"><%= resume.linkedin %></a></p>
      <% } %>
    </div>
  </div>

  <div class="section">
    <h2>Summary</h2>
    <p><%= resume.summary %></p>
  </div>

  <div class="section">
    <h2>Education</h2>
    <p><%= resume.education %></p>
  </div>

  <div class="section">
    <h2>Experience</h2>
    <p><%= resume.experience %></p>
  </div>

  <div class="section">
    <h2>Skills</h2>
    <ul class="skills">
      <% resume.skills.forEach(skill => { %>
        <li><%= skill %></li>
      <% }) %>
    </ul>
  </div>
</div>

</body>
</html>
